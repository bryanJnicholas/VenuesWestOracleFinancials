{
	"$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
        "fileShareStorageAccountName": {
            "defaultValue": "notSet",
            "type": "String"
        },
		"location": {
			"type": "string",
			"defaultValue": "[resourceGroup().location]",
			"metadata": {
				"description": "Specify a location for the resources."
			}
		}
	},
	"variables": {
		"storageAccountName": "(parameters('fileShareStorageAccountName')]"
	},
	"resources": [{
		"name": "linkedTemplate",
		"type": "Microsoft.Resources/deployments",
		"apiVersion": "2018-05-01",
		"properties": {
			"mode": "Incremental",
			"templateLink": {
				"uri": "https://bndeploymentrcdemo.blob.core.windows.net/bntemplates/fileShareStorage.json"
			},
			"parameters": {
				"storageAccountName": {
					"value": "[parameters('fileShareStorageAccountName')]"
				},
				"location": {
					"value": "[parameters('location')]"
				}
			}
		}
	}],
	"outputs": {
		"storageEndpoint": {
			"type": "object",
			"value": "[reference('linkedTemplate').outputs.storageEndpoint.value]"
		}
	}
}